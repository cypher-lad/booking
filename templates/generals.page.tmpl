{{template "base" .}}

{{define "content"}}
    <div class="container mb-4">
        <div class="row">
            <div class="col">
                <img src="static/generals.jpg" alt="General's Quarters" class="img-fluid img-thumbnail mx-auto d-block room-image">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1 class="text-center mt-4">General's Quarters</h1>
                <p>
                    Your home away from home, set on the majestic waters of the Atlantic Ocean, this will be a vacation to remember.
